<h1><%= _("Listing comments") %></h1>

<table>
  <tr>
    <th><%= _("Person") %></th>
    <th><%= _("Blog") %></th>
    <th><%= _("Body") %></th>
    <th><%= _("Type") %></th>
  </tr>

<% for comment in @comments %>
  <tr>
    <td><%=h comment.person_id %></td>
    <td><%=h comment.blog_id %></td>
    <td><%=h comment.body %></td>
    <td><%=h comment.type %></td>
    <td><%= link_to _('Show'), comment %></td>
    <td><%= link_to _('Edit'), edit_comment_path(comment) %></td>
    <td><%= link_to _('Destroy'), comment, :confirm => _('Are you sure?'), :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New comment', new_comment_path %>
