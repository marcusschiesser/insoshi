<h2><%= _("Password reminder") %></h2>

<% form_for :person, :url => password_reminders_path do |form| %>
  <div class="field_row">
    <label for="username"><%= _("Enter your email address:") %></label>
    <br />
    <%= form.text_field :email, :maxlength => Person::MAX_EMAIL %>
    <%= set_focus_to_id "person_email" %>
  </div>
  
  <div class="field_row">
    <%= submit_tag(_("Send reminder"), :class => "submit button") %>
  </div>
<% end %>