<%- unless @some_contacts.empty? -%>
  <h2><%= _("Contacts") %></h2>
  <ul class="grid contacts small">
    <%- @some_contacts.each do |contact| -%>
      <li class="vcard">
        <%= image_link(contact, :image_options => { :class => "photo fn" },
                                :link_options =>  { :class => "url" }) %>
      </li>
    <%- end -%>
    <li class="more">
      <%= link_to _("All contacts &raquo;"), person_connections_path(person) %>
    </li>
  </ul>
<%- end -%>