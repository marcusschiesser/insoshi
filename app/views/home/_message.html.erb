<li>
  <div class="profile-image">
    <%= image_link message.sender %>
  </div>
  <p><span class="field"><%= _('From:') %></span> <%= person_link message.sender %></p>
  <p class="meta published">
    <%= time_ago_with_ago(message.created_at)  %>
  </p>
  <p title="Subject">
    <%= link_to sanitize(truncate(message.subject, 30)), message %>
  </p>
</li>