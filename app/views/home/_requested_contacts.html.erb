<%- unless @requested_contacts.empty? -%>
  <h2><%= _('Contact Requests') %></h2>
  <ul class="list requests small">
    <%- @requested_contacts.each do |contact| -%>
      <%- conn = Connection.conn(current_person, contact) -%>
      <li>
        <div class="profile-image">
          <%= image_link contact %>
        </div>
        <p><%= person_link contact %></p>
        <p class="meta published">
          <%= time_ago_with_ago(conn.created_at) %>	
        </p>
        <p>
          <%= link_to _("Respond"), edit_connection_path(conn) %> |
          <%= link_to _("View profile"), contact %>
        </p>
      </li>
    <%- end -%>
  </ul>
<%- end -%>