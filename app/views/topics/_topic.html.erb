<li class="topic">
  <a name="topic_<%= topic.id %>"></a>
  <div class="profile-image">
    <%= image_link topic.person, :image => :thumbnail %>
    <%= image_tag "icons/new.gif", :class => "icon", :alt => _("Topic") %>
  </div>
  <p>
  <%- n = topic.posts.count -%>
  <%= link_to h(topic.name), 
              forum_topic_path(topic.forum, topic, :posts => n),
              :class => "show-follow" %>
  <span class="meta">(<%= n_("1 post", "%d posts", n) % n %>)</span>
  </p>
  <p class="meta">
    <%= _("Created by %{person} %{timeago}") % {:person => person_link(topic.person),
    	:timeago => time_ago_with_ago(topic.created_at)} %>
    <%- if admin? -%>
      | <%= link_to _("Edit"),  edit_forum_topic_path(topic.forum, topic) %>
      | <%= link_to _("Destroy"),  forum_topic_path(topic.forum, topic),
                                :confirm => _('Are you sure?'),
                                :method  => :delete %>
    <%- end -%>
  </p>
</li>