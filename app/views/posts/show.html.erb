<%- column_div :type => :primary do -%>

  <h2><%= link_to _("Blog for %s") % h(@blog.person.name), @blog %></h2>

  <h3>
  <%= sanitize @post.title %>
  <%- if current_person?(@blog.person) -%>
    <%= link_to _("Edit"), edit_blog_post_path(@blog, @post) %>
    | <%= link_to _("Delete"), blog_post_path(@blog, @post),
                            :method => :delete %>
  <%- end -%>
  </h3>

  <%= display @post.body %>

  <p class="meta">
  	<%= _("Posted %{timeago} by %{person}") % {:timeago => time_ago_with_ago(@post.created_at), 
  		:person => person_link(@blog.person)} %>
  </p>



  <%- unless @post.comments.empty? -%>
  <h4 id="comments"><%= _("Comments") %></h4>
    <ul class="list comments full">
      <%= render :partial => 'comment', :collection => @post.comments %>
    </ul>
  <%- end -%>

  <%- if logged_in? -%>
    <h4><%= _("Leave a comment") %></h4>

    <% form_for :comment, :url => blog_post_comments_path(@blog, @post),
                          :html => { :id => "blogcomment" } do |f| %>
      <div class="form_row">
        <%= f.text_area :body, :rows => 10 %>
      </div>
  
      <div class="form_row">
        <%= submit_tag _("Submit"), :class => "button" %>
      </div>
    <% end %>

  <%- end -%>
<%- end -%>

  <%- column_div :type => :secondary do -%>
    <%= render :partial => 'shared/minifeed' %>
  <%- end -%>