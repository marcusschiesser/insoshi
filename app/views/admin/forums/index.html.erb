<h2><%= _("Listing forums") %></h2>

<table>
  <tr>
    <th><%= _("Name") %></th>
    <th><%= _("Description") %></th>
    <th><%= _("Topics count") %></th>
  </tr>

<% for forum in @forums %>
  <tr>
    <td><%= forum_name(forum) %></td>
    <td><%=h forum.description %></td>
    <td><%=h forum.topics_count %></td>
    <td><%= link_to _('Show'), admin_forum_path(forum) %></td>
    <td><%= link_to _('Edit'), edit_admin_forum_path(forum) %></td>
    <td><%= link_to _('Destroy'), admin_forum_path(forum),
                               :confirm => _('Are you sure?'),
                               :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

