<h1><%= _("Listing activities") %></h1>

<table>
  <tr>
    <th><%= ("Person") %></th>
    <th><%= ("Instance") %></th>
    <th><%= ("Type") %></th>
  </tr>

<% for activity in @activities %>
  <tr>
    <td><%=h activity.person_id %></td>
    <td><%=h activity.item_id %></td>
    <td><%=h activity.item_type %></td>
    <td><%= link_to _('Show'), activity %></td>
    <td><%= link_to _('Edit'), edit_activity_path(activity) %></td>
    <td><%= link_to _('Destroy'), activity, :confirm => _('Are you sure?'), :method => :delete %></td>
  </tr>
<% end %>
</table>

