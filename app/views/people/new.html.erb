<%- column_div :type => :primary do -%>
  <%- if global_prefs.app_name.blank? -%>
  <h2><%= _("Sign up") %></h2>
  <%- else -%>
  <h2><%= _("Sign up for %s") % global_prefs.app_name %></h2>
  <%- end -%>

  <%= error_messages_for :person %>

  <% form_for @person do |f| -%>

  <div class="form_row">
    <label for="email">
    	<%= _("Email address") %>
        <span class="small">
        	<%= global_prefs.email_verifications? ? _("(never made public, will be verified)") : _("(never made public)") %>
      	</span>
    </label>
    <%= f.text_field :email, :maxlength => Person::MAX_EMAIL %>
    <%= set_focus_to_id "person_email" %>  
  </div>

  <div class="form_row">
    <label for="name"><%= _("Name") %> 
      <span class="small"><% _("(will be displayed)") %></span></label>
    <%= f.text_field :name, :maxlength => Person::MAX_NAME %>
  </div>

  <div class="form_row">
    <label for="password"><%= _("Password") %></label>
    <%= f.password_field :password, :maxlength => Person::MAX_PASSWORD %>
  </div>

  <div class="form_row">
    <label for="password_confirmation"><%= _("Confirm Password") %></label>
    <%= f.password_field :password_confirmation, 
                         :maxlength => Person::MAX_PASSWORD,
                         :value => "" %>
  </div>
  <div class="form_row">
    <%= submit_tag _('Sign up'), :class => "button" %>
  </div>
  <% end %>
<%- end -%>