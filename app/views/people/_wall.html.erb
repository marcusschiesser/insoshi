<%- if logged_in? -%>
  <div class="wall">
    <h2><%= _("Comment Wall") %></h2>
    <a name="wall"></a>
    
    <%- if connected_to?(@person) -%>
      <% form_for :comment, :url => person_comments_path(@person) do |f| %>
        <div class="form_row">
          <%= f.text_area :body, :rows => 2 %>
        </div>
  
        <div class="form_row">
          <%= submit_tag _("Submit"), :class => "button" %>
        </div>
      <% end %>
    <%- else -%>
      <p>
      <%= _("You must be connected to %s to leave a wall comment.") % h(@person.name) %> 
      </p>
      <p>
      <%= link_to _("Connect with %s now") % h(@person.name),
                  person_connections_path(@person), :method => :post %>
      </p>
    <%- end -%>

    <%- unless @person.comments.empty? -%>
      <ul class="list comments full">
        <%= render :partial => 'comment', :collection => @person.comments %>
      </ul>
    <%- end -%>
  </div>
<%- end -%>