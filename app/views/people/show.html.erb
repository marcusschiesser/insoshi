<%- column_div :type => :primary do -%>
  <div class="profile vcard">
    <h2><%= _("Profile:") %><span class="fn n"><%= h @person.name %></span></h2>
    <%- if admin? and not @person.active? -%>
      <p class="error"><% _("This person is not active") %></p>
    <%- end -%>
    <%- if current_person?(@person) -%>
      <%- if current_person.description.blank? -%>
        <div class="error">
          <%= _("Your description is blank.") %>
          <%= link_to _("Click here to add a description"),
                      edit_person_path(@person) %>
        </div>
      <%- else -%>
        <div class="notice">
          <%= _("You are viewing your own profile.") %>
          <%= link_to _("Click here to edit it"), edit_person_path(@person) %>
        </div>
      <%- end -%>
    <%- end -%>
    <div class="toolbox">
      <%= image_tag @person.main_photo, :class => "profile-image photo",
                                        :alt => h(@person.name) %>

      <%- unless current_person?(@person) -%>
        <ul class="tools">
         <%- if logged_in? -%>
          <%- unless Connection.exists?(@person, current_person) -%>
            <li>
            <%= link_to _("Connect with %s!") % @person.name,
                        person_connections_path(@person), :method => :post %>
            </li>
          <%- end -%>
          <%- if Connection.connected?(@person, current_person) -%>
          <li>
            <%= _("%s is one of your contacts") % h(@person.name) %> 
            <br />
           (<%= link_to _("end connection"), 
               connection_path(Connection.conn(current_person, @person)), 
               :method => :delete,
              :confirm => 
_("Are you sure you want to end connection with %s?") % h(@person.name) %>)
          
          </li>
          <%- end -%>
          <li><%= email_link @person %></li>
        <%- end -%>
          <li><%= link_to _("%s's blog") % h(@person.name),
                  blog_path(@person.blog) %></li>
          <%- if current_person.admin? -%>
          <li>
          <%- activity = @person.deactivated? ? _("activate") : _("deactivate") -%>
          <%= link_to activity, 
                      admin_person_path(@person, :task => "deactivated"),
                      :method => :put %>
          </li>
          <%- end -%>
        </ul>
      <%- end -%>
      
      <%- if current_person?(@person) and current_person.admin? -%>
        <ul class="tools">
          <li><%= _("%s to everyone") % email_link(@person) %> </li>
        </ul>
      <%- end -%>
    </div>
    <%= display @person.description %>
  </div>

  <%= render :partial => 'recent_activity' %>
  <%= render :partial => 'wall' %>
<%- end -%>

<%- column_div :type => :secondary do -%>
  <%= render :partial => 'shared/minifeed' %>
  <%- if logged_in? -%>
    <%= render :partial => 'shared/contacts_preview',
               :locals => { :person => @person } %>
    <%= render :partial => 'common_contacts' %>
  <%- end -%>
<%- end -%>

