<h2><%= _("Search %s") % search_type %></h2>
<% form_tag searches_path, :method => :get, :id => "frmSearch" do %>
  <fieldset title="<%= _("Search Insoshi") %>">
    <%= text_field_tag :q, params[:q], :id => "txtSearch", :class => "txt",
                                       :maxlength => 50 %>
    <%= submit_tag _("Search"), :name => nil, :id => "btnSearch",
                             :class => "button"  %>
    <%= hidden_field_tag "model", search_model %>
  </fieldset>
<% end %>
